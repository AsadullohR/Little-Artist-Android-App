<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"

    android:orientation="vertical">


    <ImageButton
        android:id="@+id/id_very_small_size"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_brush_bgr"
        android:contentDescription="image very small"
        android:src="@drawable/verysmall"
        app:layout_constraintBottom_toTopOf="@+id/id_small_size"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.555" />

    <ImageButton
        android:id="@+id/id_small_size"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_brush_bgr"
        android:padding="8dp"
        android:contentDescription="image small"
        android:src="@drawable/small"
        app:layout_constraintBottom_toTopOf="@+id/id_medium_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_very_small_size" />

    <ImageButton
        android:id="@+id/id_medium_size"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_brush_bgr"
        android:contentDescription="image medium"
        android:src="@drawable/medium"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/id_large_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_small_size" />

    <ImageButton
        android:id="@+id/id_large_size"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_brush_bgr"
        android:contentDescription="image large"
        android:src="@drawable/large"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_medium_size" />


</androidx.constraintlayout.widget.ConstraintLayout>